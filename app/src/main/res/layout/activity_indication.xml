<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grechur.customviewapp.IndicatorActivity">
    <com.grechur.customviewapp.view.tabIndication.TrackTextIndicator
        android:id="@+id/track_indicator"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/trans_bg"
        app:visibleIndicatorNum="6"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
